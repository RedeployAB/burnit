          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "name": {
                      "description": "The name of the API.",
                      "example": "burnit",
                      "type": "string"
                    },
                    "version": {
                      "description": "The version of the API.",
                      "example": "0.1.0",
                      "type": "string"
                    },
                    "endpoints": {
                      "description": "The available endpoints of the API.",
                      "items": {
                        "example": [
                          "/secret",
                          "/secrets"
                        ],
                        "type": "string"
                      },
                      "type": "array"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": null
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "statusCode": {
                      "description": "The status code of the error.",
                      "example": 500,
                      "type": "integer"
                    },
                    "code": {
                      "description": "The error code.",
                      "example": "ServerError",
                      "type": "string"
                    },
                    "error": {
                      "description": "The error message.",
                      "example": "internal server error",
                      "type": "string"
                    },
                    "requestId": {
                      "description": "The request ID of the error.",
                      "format": "uuid",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Internal server error."
          }
        },
        "tags": [
          "Index"
        ]
      }
    },
    "/secret": {
      "get": {
        "description": "Generate a secret with specified length and special characters. Default length is 16 characters with no special characters.",
        "parameters": [
          {
            "description": "Length (amount of characters) of the secret. Alias 'l' is short for length.",
            "in": "query",
            "name": "length",
            "required": false,
            "schema": {
              "maximum": 512,
              "minimum": 1,
              "type": "integer"
            }
          },
          {
            "description": "Include special characters in the secret. Alias 'sc' is short for specialCharacters.",
            "in": "query",
            "name": "specialCharacters",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "value": {
                      "description": "The generated secret value.",
                      "example": "secret",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              },
              "text/plain": {
                "schema": {
                  "description": "The generated secret value.",
                  "example": "secret",
                  "type": "string"
                }
              }
            },
            "description": "Secret generated successfully."
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "statusCode": {
                      "description": "The status code of the error.",
                      "example": 500,
                      "type": "integer"
                    },
                    "code": {
                      "description": "The error code.",
                      "example": "ServerError",
                      "type": "string"
                    },
                    "error": {
                      "description": "The error message.",
                      "example": "internal server error",
                      "type": "string"
                    },
                    "requestId": {
                      "description": "The request ID of the error.",
                      "format": "uuid",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Internal server error."
          }
        },
        "summary": "Generate a secret.",
        "tags": [
          "Secrets"
        ]
      }
    },
    "/secrets": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "value": {
                    "description": "The value of the secret.",
                    "example": "secret",
                    "required": true,
                    "type": "string"
                  },
                  "passphrase": {
                    "description": "The passphrase of the secret. If not provided, a passphrase will be generated.",
                    "example": "passphrase",
                    "required": false,
                    "type": "string"
                  },
                  "ttl": {
                    "description": "The time-to-live of the secret. If neither this or expiresAt is provided, the secret will will expire in 1 hour. Format example: 1s, 1m, 1h, 1h30m. Maximum unit is hours.",
                    "example": "1h",
                    "required": false,
                    "type": "string"
                  },
                  "expiresAt": {
                    "description": "The expiration date of the secret. If neither this or ttl is provided, the secret will will expire in 1 hour.",
                    "example": "2025-01-08T23:28:14+01:00",
                    "required": false,
                    "type": "date-time"
                  }
                },
                "type": "object"
              }
            }
          },
          "description": "The secret to create.",
          "required": true
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "description": "The ID of the secret.",
                      "format": "uuid",
                      "type": "string"
                    },
                    "passphrase": {
                      "description": "The passphrase of the secret.",
                      "example": "passphrase",
                      "type": "string"
                    },
                    "ttl": {
                      "description": "The time-to-live of the secret.",
                      "example": "1h0m0s",
                      "type": "string"
                    },
                    "expiresAt": {
                      "description": "The expiration date of the secret.",
                      "example": "2025-01-08T23:28:14+01:00",
                      "format": "date-time",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Secret created successfully."
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "statusCode": {
                      "description": "The status code of the error.",
                      "example": 400,
                      "type": "integer"
                    },
                    "code": {
                      "description": "The error code.",
                      "example": "InvalidRequest",
                      "type": "string"
                    },
                    "error": {
                      "description": "The error message.",
                      "example": "invalid request",
                      "type": "string"
                    },
                    "requestId": {
                      "description": "The request ID of the error.",
                      "format": "uuid",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Invalid request. For a available error codes and their error messages, see the documentation at section [Error codes]()."
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "statusCode": {
                      "description": "The status code of the error.",
                      "example": 500,
                      "type": "integer"
                    },
                    "code": {
                      "description": "The error code.",
                      "example": "ServerError",
                      "type": "string"
                    },
                    "error": {
                      "description": "The error message.",
                      "example": "internal server error",
                      "type": "string"
                    },
                    "requestId": {
                      "description": "The request ID of the error.",
                      "format": "uuid",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Internal server error."
          }
        },
        "summary": "Create a secret.",
        "tags": [
          "Secrets"
        ]
      }
    },
    "/secrets/{id}": {
      "get": {
        "parameters": [
          {
            "description": "The ID of the secret.",
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "format": "uuid",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "description": "The ID of the secret.",
                      "format": "uuid",
                      "type": "string"
                    },
                    "value": {
                      "description": "The value of the secret.",
                      "type": "string",
                      "example": "secret"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Secret retrieved successfully."
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "statusCode": {
                      "description": "The status code of the error.",
                      "example": 401,
                      "type": "integer"
                    },
                    "code": {
                      "description": "The error code.",
                      "example": "InvalidPassphrase",
                      "type": "string"
                    },
                    "error": {
                      "description": "The error message.",
                      "example": "invalid passphrase",
                      "type": "string"
                    },
                    "requestId": {
                      "description": "The request ID of the error.",
                      "format": "uuid",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Invalid passphrase."
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "statusCode": {
                      "description": "The status code of the error.",
                      "example": 404,
                      "type": "integer"
                    },
                    "code": {
                      "description": "The error code.",
                      "example": "SecretNotFound",
                      "type": "string"
                    },
                    "error": {
                      "description": "The error message.",
                      "example": "secret not found",
                      "type": "string"
                    },
                    "requestId": {
                      "description": "The request ID of the error.",
                      "format": "uuid",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Secret not found."
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
